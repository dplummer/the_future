<h1>The Future Board</h1>

<p id="notice"><%= notice %></p>

<%= link_to 'New Post', new_post_path %>

<div ng-controller="PostsCtrl">
  <div ng-repeat="post in posts">
    <h2>{{ post.title }}</h2>
    <h4>By: {{ post.author }}, <abbr title="{{post.created_at}}">{{ post.created_at }}</abbr></h4>
    <p>{{ post.body }}</p>
    <hr />
  </div>
</div>
